{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block stylesheets %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        background: #f5f5f5;
        min-height: 100vh;
        padding: 20px;
    }
    
    .container {
        max-width: 500px;
        margin: 0 auto;
        background: white;
        border-radius: 8px;
        padding: 40px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }
    
    .back-link {
        display: inline-block;
        color: #666;
        text-decoration: none;
        margin-bottom: 20px;
        font-size: 0.9rem;
    }
    
    .back-link:hover {
        color: #333;
    }
    
    h1 {
        color: #333;
        font-size: 2rem;
        margin-bottom: 20px;
        font-weight: 600;
    }
    
    .subtitle {
        color: #666;
        font-size: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('home') }}" class="back-link">← Retour à l'accueil</a>
    <h1>Liste des produits</h1>
    <p class="subtitle">Page des produits</p>
</div>
{% endblock %}
